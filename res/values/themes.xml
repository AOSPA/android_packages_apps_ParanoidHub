<resources>

    <style name="IconTheme">
        <item name="android:icon">@drawable/ic_system_update</item>
    </style>

    <style name="Hub.Text" parent="SudDescription.Glif">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:layout_marginBottom">?attr/sudGlifDescriptionMarginBottom</item>
        <item name="android:fontFamily">@string/sudFontSecondary</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textAppearance">@style/Hub.Text.TextAppearance</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Hub.Text.Stepper" parent="SudDescription.Glif">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:fontFamily">@string/sudFontSecondary</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textAppearance">@style/Hub.Text.Stepper.TextAppearance</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Hub.Text.TextAppearance" parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Hub.Text.Stepper.TextAppearance" parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Hub.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:maxWidth">320dp</item>
        <item name="android:buttonStyle">@style/Hub.Button</item>
        <item name="android:theme">@style/Hub.Button</item>
        <item name="buttonStyle">@style/Hub.Button</item>
        <item name="android:backgroundTint">@color/theme_accent</item>
        <item name="android:padding">14dp</item>
        <item name="android:insetTop">6dp</item>
        <item name="android:insetBottom">6dp</item>
        <item name="android:fontFamily">?android:attr/fontFamily</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.00714286</item>
        <item name="android:buttonCornerRadius">24dp</item>
        <item name="rippleColor">@color/material_button_ripple_color</item>
    </style>

    <style name="Hub.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:maxWidth">320dp</item>
        <item name="android:buttonStyle">@style/Hub.Button.Borderless</item>
        <item name="android:theme">@style/Hub.Button.Borderless</item>
        <item name="buttonStyle">@style/Hub.Button.Borderless</item>
        <item name="android:textColor">@color/theme_accent</item>
        <item name="android:padding">14dp</item>
        <item name="android:insetTop">6dp</item>
        <item name="android:insetBottom">6dp</item>
        <item name="android:fontFamily">?android:attr/fontFamily</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.00714286</item>
        <item name="android:buttonCornerRadius">24dp</item>
        <item name="rippleColor">@color/material_button_ripple_color</item>
    </style>

    <style name="Hub.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateTint">@color/theme_accent</item>
        <item name="android:indeterminateTintMode">src_in</item>
        <item name="android:progressTint">@color/theme_accent</item>
        <item name="android:progressTintMode">src_in</item>
    </style>

    <style name="Hub.ProgressBar.Circular" parent="@android:style/Widget.Material.ProgressBar.Large">
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/ic_circular_progress_animator</item>
        <item name="android:indeterminateTint">@null</item>
        <item name="android:indeterminateTintMode">@null</item>
    </style>

    <style name="GlifThemeV4" parent="SudThemeGlifV4.DayNight">
        <item name="android:windowBackground">?android:attr/colorBackground</item>
        <item name="sud_glif_icon_theme">@style/IconTheme</item>
    </style>

    <style name="GlifThemeV4.Light" parent="SudThemeGlifV4.Light">
        <item name="android:windowBackground">?android:attr/colorBackground</item>
        <item name="sud_glif_icon_theme">@style/IconTheme</item>
    </style>

    <style name="GlifThemeV3" parent="SudThemeGlifV3.DayNight">
        <item name="android:windowBackground">?android:attr/colorBackground</item>
        <item name="sud_glif_icon_theme">@style/IconTheme</item>
    </style>

    <style name="GlifThemeV3.Light" parent="SudThemeGlifV3.Light">
        <item name="android:windowBackground">?android:attr/colorBackground</item>
        <item name="sud_glif_icon_theme">@style/IconTheme</item>
    </style>
</resources>