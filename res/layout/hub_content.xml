<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/system_update_header"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:animateLayoutChanges="true">

        <ImageView
            android:id="@+id/header_system_update_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/header_system_update" />

        <TextView
            android:id="@+id/header_system_update_status"
            android:textColor="@color/header_title_color"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="?textAppearanceHeadline5" />

        <TextView
            android:id="@+id/system_update_error_message"
            android:textColor="@color/error"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            style="?textAppearanceBody1" />

        <ProgressBar
            android:id="@+id/system_update_progress"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            style="?android:progressBarStyleHorizontal" />

        <TextView
            android:id="@+id/system_update_status"
            android:textColor="@color/header_title_color"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            style="?textAppearanceBody1" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/system_update_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:layout_marginRight="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <Button
            android:id="@+id/system_update_primary_button"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            style="@style/HubTheme.Button.Colored" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/system_update_info"
        android:paddingBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@id/system_update_buttons">

        <ImageView
            android:id="@+id/system_update_info_icon"
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_info_outline_grey600_24dp" />

        <TextView
            android:id="@+id/system_update_info_desc"
            android:textColor="?android:textColorSecondary"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="6dp"
            android:text="@string/update_found_warning_and_desc"
            style="?textAppearanceBody2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/changelog_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:layout_below="@id/system_update_header">

        <TextView
            android:id="@+id/system_update_changelog_header"
            android:textColor="@color/theme_accent"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update_found_changelog_title"
            style="?textAppearanceBody1" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/system_update_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_above="@id/system_update_info"
        android:layout_below="@id/changelog_header">

        <TextView
            android:id="@+id/system_update_desc"
            android:textColor="@color/header_title_color"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?textAppearanceBody1" />
    </ScrollView>

</RelativeLayout>